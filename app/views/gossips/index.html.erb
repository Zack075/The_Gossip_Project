<% @gossips.each do |gossip| %>

	<tr>
		<td><%= gossip.anonymous_author %></td>
		<td><%= gossip.content %></td>
		<td><%= link_to "voir", gossip_path(gossip)%></td>
		<td><%= link_to 'Supprimer', gossip_path(gossip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>
